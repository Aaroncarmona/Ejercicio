<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/cardviewAmigo"
    android:layout_margin="10dp"
    android:clickable="true"
    android:elevation="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <ImageView
            android:id="@+id/imagenAmigo"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_account_box_white_48dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:textColor="@color/colorAccent"
            android:id="@+id/nombreAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Nombre Amigo"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imagenAmigo"/>
        <TextView
            android:id="@+id/twitterAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:text="Twitter de amigo"
            android:layout_toEndOf="@id/imagenAmigo"
            android:layout_below="@+id/nombreAmigo" />
        <TextView
            android:id="@+id/utimaCancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="Ultima cancion escuchada"
            android:layout_toEndOf="@id/imagenAmigo"
            android:layout_below="@id/twitterAmigo"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>